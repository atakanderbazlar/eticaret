@model ProductListModel

<div class="row">
    <div class="col-md-3">
        @await Component.InvokeAsync("CategoryList")
    </div>
    <div class="col-md-9">

        <partial name="_slider" />

        <div class="row">
            @if (Model.Products.Count == 0)
            {

                <div class="alert alert-warning alert-dismissible fade show ml-4" role="alert">

                    <h4 class="alert-heading"><strong>Product not found!</strong></h4>
                    <hr>
                    <p class="mb-0">You may have searched for a product that is not in stock or you may have made a typographical error.</p>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

            }
            @foreach (var product in Model.Products)
            {
                <partial name="_product" for="@product" />
            }

        </div>

    </div>
</div>


